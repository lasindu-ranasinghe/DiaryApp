<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- Define the shape as a rectangle -->

    <!-- Define the corners, all corners are rounded with the same radius -->
    <corners android:radius="20dp" />

    <!-- Optional: Define the background color of the rectangle -->
    <solid android:color="#D8D9DA" />

    <!-- Optional: Include padding inside the shape -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
